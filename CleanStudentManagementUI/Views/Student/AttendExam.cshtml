@model StudentAttendanceViewModel;

<h1>@Model.ExamName</h1>

@if(string.IsNullOrEmpty(Model.Message))
{
    <form asp-action="AttendExam" asp-controller="students" method="post">
        <input type="hidden" asp-for="StudentId"/>
        <ul>
            @for(int i=0;i<Model.QuesList.Count();i++)
            {
                <input type="hidden" asp-for="@Model.QuesList[i].Id"/>
                <input type="hidden" asp-for="@Model.QuesList[i].Examid"/>
                <li>
                    <label for="@Model.QuesList[i].QuestionTitle">@Model.QuesList[i].QuestionTitle</label>
                
                </li>
                <li>
                    <select asp-for="@Model.QuesList[i].SelectedAnswer" class="form-control">
                        <option selected disabled>Choose Answer</option>
                        <option value="1">@Model.QuesList[i].OptionA</option>
                        <option value="2">@Model.QuesList[i].OptionB</option>
                        <option value="3">@Model.QuesList[i].OptionC</option>
                        <option value="4">@Model.QuesList[i].OptionD</option>
                    </select>
                </li>
                <button type="submit">Submit</button>
            }
        </ul>
       
    </form>
}
else
{
    <h1 class="alert alert-danger">@Model.Message</h1>
}