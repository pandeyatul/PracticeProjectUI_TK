@model CleanStudentManagementModel.GroupStudentViewModel

@{
    ViewData["Title"] = "Details";
}
<h4>Assign Class to student</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="GroupId" class="form-control" />
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>
            @for (int i=0;i<Model.StudentList.Count;i++)
            {
                <input type="hidden" asp-for="@Model.StudentList[i].Id" />
                <input asp-for="@Model.StudentList[i].IsChecked" />
                @Model.StudentList[i].Name
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
