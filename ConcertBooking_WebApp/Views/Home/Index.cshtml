@model List<ConcertViewModel>;
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div class="row mt-3">
    @foreach(var item in Model)
    {
        <div class="col-3 mb-3">
            <div class="card" style="width: 18rem;">
                <img src="@item.ImageUrl" height="200" width="200" class="card-img-top" alt="Concert image">
                <div class="card-body">
                    <h5 class="card-title">@item.Concert_Name</h5>
                    <h5 class="card-title">@item.ArtistName</h5>
                    <p class="card-text">@item.Description</p>
                    <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>
    }
</div>