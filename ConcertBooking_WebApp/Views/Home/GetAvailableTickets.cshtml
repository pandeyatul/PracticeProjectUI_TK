@model TicketViewModel
@{
    ViewData["Title"] = "GetAvailableTickets";
}
<div class="container mt-5">
    <h3>@Model.ConcertName - Available Seats</h3>
    <hr/>
    <form asp-action="BookTicket" asp-controller="Home" method="post">
        @foreach (var seat in Model.AvailableSeats)
        {
            <div class="form-check mb-2 ">
                <input type="checkbox" name="selectedSeats" value="@seat" id="seat_@seat"/>
                <label class="form-check-label" for="seat_@seat">Seat #@seat</label>
            </div>
        }
        <input type="hidden" asp-for="ConcertId"/>
        <input type="submit"class="btn btn-danger mt-4"value="Book Selected seats"/>
    </form>
</div>
