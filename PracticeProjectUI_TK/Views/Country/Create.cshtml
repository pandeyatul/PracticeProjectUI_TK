@model Entities_TK.Country

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Country</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCountry">
            <input type="hidden" asp-for="Id" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Country_Name" class="control-label"></label>
                <input asp-for="Country_Name" class="form-control" />
                <span asp-validation-for="Country_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
